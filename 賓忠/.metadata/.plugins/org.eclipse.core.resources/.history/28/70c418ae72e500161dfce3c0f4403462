package 學生資訊系統;

import java.util.Scanner;

public class StudentSystem {
	private static Scanner input;
	public static void main(String[] args){
		System.out.println("請輸入學生人數: ");
		input = new Scanner(System.in);
		StudentInformation[] number  = new StudentInformation[input.nextInt()];
		int i;
		int k,t;
		for(i=1;i<=number.length;i++){
			System.out.println("請輸入學生身高、體重、成績、學號: ");
			number [i] = new StudentInformation(input.nextFloat(),input.nextFloat(),input.nextInt(),input.nextLine());	
		}
		for(k=1;k<number.length;k++)
			for(t=k+1;t<number.length;t++)
				if ( number[k].SaveGrade() > number[t].SaveGrade() )
				{
					StudentInformation v = number[t];
					number[t] = number[k];
					number[k] = v;
		}
		
	}
}
