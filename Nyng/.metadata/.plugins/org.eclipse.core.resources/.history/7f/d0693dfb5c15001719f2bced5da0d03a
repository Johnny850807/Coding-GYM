package org.nyngwang.area;

import java.util.Scanner;

public class Main {
	public static Scanner scan = new Scanner(System.in);
	public static void main(String[] args) {
		while (true) {
			System.out.println("Enter the shape which you want to compute the area");
			System.out.println("(1) Triangle (2) Circle (3) Rectangle ? ");
			switch (scan.nextInt()) {
			case 1:
				Triangle triangle = new Triangle();
				System.out.print("Base: ");
				triangle.setBase(scan.nextDouble());
				System.out.print("Height: ");
				triangle.setHeight(scan.nextDouble());
			case 2:
			case 3:
			}
		}
	}
}
